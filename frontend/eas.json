{
  "cli": {
    "version": ">= 3.15.1",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "extends": "production",
      "distribution": "internal",
      "channel": "development",
      "env": {
        "ANDROID_HOME": "/root/android-sdk"
      },
      "android": {
        "buildType": "apk",
        "withoutCredentials": true,
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "buildConfiguration": "Debug",
        "simulator": false
      }
    },
    "development_tv": {
      "extends": "development",
      "env": {
        "EXPO_TV": "1",
        "ANDROID_HOME": "/root/android-sdk"
      },
      "ios": {
        "buildConfiguration": "Debug",
        "simulator": false
      }
    },
    "preview": {
      "extends": "production",
      "distribution": "internal",
      "channel": "preview",
      "env": {
        "ANDROID_HOME": "/root/android-sdk"
      },
      "ios": {
        "simulator": true
      },
      "android": {
        "buildType": "apk",
        "withoutCredentials": true
      }
    },
    "preview_tv": {
      "extends": "preview",
      "env": {
        "EXPO_TV": "1",
        "ANDROID_HOME": "/root/android-sdk"
      }
    },
    "production": {
      "channel": "production",
      "autoIncrement": true,
      "env": {
        "GRADLE_OPTS": "-Xmx4096m -XX:MaxMetaspaceSize=1024m"
      },
      "ios": {
        "buildConfiguration": "Release",
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production_tv": {
      "extends": "production",
      "env": {
        "EXPO_TV": "1",
        "ANDROID_HOME": "/root/android-sdk",
        "GRADLE_OPTS": "-Xmx4096m -XX:MaxMetaspaceSize=1024m"
      },
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "buildConfiguration": "Release",
        "simulator": false
      }
    },
    "production_tv_signed": {
      "extends": "production_tv",
      "ios": {
        "buildConfiguration": "Release",
        "simulator": false,
        "credentialsSource": "remote"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
